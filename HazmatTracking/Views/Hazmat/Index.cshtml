@model IEnumerable<HazmatTracking.Models.Hazmat>

@{
    ViewBag.Title = "Index";
}

<h2>Transactions</h2>
<br />
<div class="row">
    <div class="col-md-2"><strong>@Html.ActionLink("Add a Transaction", "Create")</strong></div>
    <div class="col-md-2"><a href="http://hbgintrasql01/Reports/Pages/Report.aspx?ItemPath=%2fHazmat%2fHazardous+Material+Usage">Usage Report</a></div>
    <div class="col-md-2">@Html.ActionLink("Code List", "CodeGuide", null, new { target = "_blank" })</div>
</div>
<div class="row">
    <div class="col-md-9">
        <table class="table table-condensed table-hover table-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Material)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Material)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
